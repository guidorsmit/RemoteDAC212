<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_bluetooth_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

	<TextView
		android:id="@+id/connectLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Please select device"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:textSize="8pt"/>
    
    
     <NumberPicker
        android:id="@+id/bluetoothNumberPicker" 
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"  
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
   	
   	<LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="120dp"
    	android:gravity="center_horizontal"
    	android:layout_gravity="center_horizontal">
	      
	    <Button 
	        android:id="@+id/searchButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_marginRight="40dp"
		    android:background="@drawable/button_search_wrapper"
	        android:layout_gravity="center_horizontal"/>  
	        
	     <Button 
	        android:id="@+id/connectButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_marginLeft="40dp"
		    android:background="@drawable/button_connect_wrapper"
	        android:layout_gravity="center_horizontal"/>

	     
	 </LinearLayout>  
</LinearLayout>

